<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="185dp"
        android:id="@+id/imgDetailVerzoek"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Naam Voornaam wil met je meerijden!"
        android:id="@+id/txbVerzoekNaam"
        android:layout_below="@+id/imgDetailVerzoek"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Van: straat"
        android:id="@+id/txbVerzoekVan"
        android:layout_below="@+id/txbVerzoekNaam"
        android:layout_alignLeft="@+id/txbVerzoekNaam"
        android:layout_alignStart="@+id/txbVerzoekNaam"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Naar: straat"
        android:id="@+id/txbVerzoekNaar"
        android:layout_below="@+id/txbVerzoekVan"
        android:layout_alignLeft="@+id/txbVerzoekVan"
        android:layout_alignStart="@+id/txbVerzoekVan"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Dag: datum"
        android:id="@+id/txbVerzoekDag"
        android:layout_below="@+id/txbVerzoekNaar"
        android:layout_alignLeft="@+id/txbVerzoekNaar"
        android:layout_alignStart="@+id/txbVerzoekNaar"
        android:layout_marginTop="10dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Uur: uur"
        android:id="@+id/txbVerzoekUur"
        android:layout_below="@+id/txbVerzoekDag"
        android:layout_alignLeft="@+id/txbVerzoekDag"
        android:layout_alignStart="@+id/txbVerzoekDag"
        android:layout_marginTop="10dp"  />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/Answer_Message"
        android:id="@+id/txbVerzoekBericht"
        android:layout_below="@+id/txbVerzoekUur"
        android:layout_alignLeft="@+id/txbVerzoekUur"
        android:layout_alignStart="@+id/txbVerzoekUur"
        android:layout_marginTop="10dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/txtVerzoekBijgevoegd"
        android:layout_below="@+id/txbVerzoekBericht"
        android:layout_marginTop="7dp"
        android:layout_marginRight="20dp"
        android:layout_alignLeft="@+id/txbVerzoekBericht"
        android:layout_alignStart="@+id/txbVerzoekBericht"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/Button_Accept"
        android:id="@+id/btnVerzoekAccept"
        android:layout_below="@+id/txtVerzoekBijgevoegd"
        android:layout_alignLeft="@+id/txtVerzoekBijgevoegd"
        android:layout_alignStart="@+id/txtVerzoekBijgevoegd"
        android:layout_marginTop="20dp"
        android:drawableLeft="@drawable/ic_check_white_36dp"
        android:textColor="@color/rideshare_secondary"
        android:textAllCaps="true"
        android:elevation="2dp"
        android:stateListAnimator="@anim/button_elevation"
        android:width="140dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:text="@string/Button_Decline"
        android:id="@+id/btnVerzoekWeiger"
        android:width="140dp"
        android:drawableLeft="@drawable/ic_close_white_36dp"
        android:textColor="@color/rideshare_secondary"
        android:textAllCaps="true"
        android:elevation="2dp"
        android:stateListAnimator="@anim/button_elevation"
        android:layout_alignTop="@+id/btnVerzoekAccept"
        android:layout_toEndOf="@+id/btnVerzoekAccept"
        android:layout_marginLeft="10dp" />


</RelativeLayout>