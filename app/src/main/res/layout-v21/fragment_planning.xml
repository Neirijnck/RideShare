<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nmct.howest.be.rideshare.Activities.Fragments.PlanningFragment"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle"
            android:text="@string/Plan_Title"
            android:id="@+id/txbPlannen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:capitalize="sentences" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/From"
            android:id="@+id/txbVanPlan"
            android:layout_below="@+id/txbPlannen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:textSize="17sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtVanPlan"
            android:layout_below="@+id/txbVanPlan"
            android:layout_alignLeft="@+id/txbVanPlan"
            android:layout_alignStart="@+id/txbVanPlan"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:hint="Van"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/To"
            android:id="@+id/txbNaarPlan"
            android:layout_below="@+id/txtVanPlan"
            android:layout_alignLeft="@+id/txtVanPlan"
            android:layout_alignStart="@+id/txtVanPlan"
            android:layout_marginTop="12dp"
            android:textSize="17sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtNaarPlan"
            android:layout_below="@+id/txbNaarPlan"
            android:layout_alignLeft="@+id/txbNaarPlan"
            android:layout_alignStart="@+id/txbNaarPlan"
            android:layout_alignRight="@+id/txtVanPlan"
            android:layout_alignEnd="@+id/txtVanPlan"
            android:hint="Naar" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Date"
            android:id="@+id/txbDatePlan"
            android:layout_below="@+id/txtNaarPlan"
            android:layout_alignLeft="@+id/txtNaarPlan"
            android:layout_alignStart="@+id/txtNaarPlan"
            android:layout_marginTop="12dp"
            android:textSize="17sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/txtDatePlan"
            android:layout_below="@+id/txbDatePlan"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignRight="@+id/txbPlannen"
            android:layout_alignEnd="@+id/txbPlannen"
            android:focusable="false"
            android:hint="01/01/2015" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Time"
            android:id="@+id/txbTimePlan"
            android:layout_alignTop="@+id/txbDatePlan"
            android:layout_toRightOf="@+id/txtDatePlan"
            android:layout_toEndOf="@+id/txtDatePlan"
            android:textSize="17sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/txtTimePlan"
            android:focusable="false"
            android:layout_below="@+id/txbTimePlan"
            android:layout_alignLeft="@+id/txbTimePlan"
            android:layout_alignStart="@+id/txbTimePlan"
            android:hint="15:00"/>

         <android.support.v7.widget.SwitchCompat
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/Repeat"
             android:id="@+id/repeatSwitch"
             android:layout_centerVertical="true"
             android:layout_alignLeft="@+id/txtDatePlan"
             android:layout_alignStart="@+id/txtDatePlan"
             android:layout_below="@+id/txtDatePlan"
             android:layout_marginTop="12dp"
             android:checked="false"
             android:textColor="@color/rideshare_text"
             >
         </android.support.v7.widget.SwitchCompat>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_below="@+id/repeatSwitch"
            android:layout_marginTop="12dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/tglBtns"
            android:visibility="gone">

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="M"
                android:id="@+id/tglMaandag"
                android:checked="false"
                android:textOff="M"
                android:textOn="M" />

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="D"
                android:id="@+id/tglDinsdag"
                android:checked="false"
                android:textOff="D"
                android:textOn="D" />

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="W"
                android:id="@+id/tglWoensdag"
                android:checked="false"
                android:textOff="W"
                android:textOn="W"/>

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="D"
                android:id="@+id/tglDonderdag"
                android:checked="false"
                android:textOff="D"
                android:textOn="D" />

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="V"
                android:id="@+id/tglVrijdag"
                android:checked="false"
                android:textOff="V"
                android:textOn="V" />

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="Z"
                android:id="@+id/tglZaterdag"
                android:checked="false"
                android:textOff="Z"
                android:textOn="Z" />

            <ToggleButton
                android:layout_width="47dp"
                android:layout_height="50dp"
                android:text="Z"
                android:id="@+id/tglZondag"
                android:checked="false"
                android:textOff="Z"
                android:textOn="Z" />
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Price"
            android:id="@+id/txbPrijs"
            android:layout_below="@+id/tglBtns"
            android:layout_marginTop="12dp"
            android:textSize="17sp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/txtPrice"
            android:layout_below="@+id/txbPrijs"
            android:hint="â‚¬0"
            />

        <Button
            android:layout_width="120dp"
            android:layout_height="45dp"
            android:text="@string/Save"
            android:textAllCaps="true"
            android:id="@+id/btnOpslaan"
            android:layout_below="@+id/txtPrice"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:textColor="@color/rideshare_secondary"
            android:elevation="2dp"
            android:stateListAnimator="@anim/button_elevation"
            />

    </RelativeLayout>
</ScrollView>