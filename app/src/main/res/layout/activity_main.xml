<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/toolbar"
    android:id="@+id/toolbarLayout" />

<com.astuetz.PagerSlidingTabStrip
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tabStrip"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@color/rideshare_primary"
    app:pstsTabBackground="@drawable/tab_indicator_ab_rideshare"
    app:pstsIndicatorColor="@color/rideshare_secondary"
    app:pstsIndicatorHeight="3dp"
    app:pstsDividerColor="@color/rideshare_primary"
    app:pstsTextAllCaps="true"
    app:pstsUnderlineColor="@color/rideshare_primary"
    app:pstsUnderlineHeight="0dp"
    app:pstsShouldExpand="true"
    android:layout_below="@+id/toolbarLayout"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true" />

<android.support.v4.view.ViewPager
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/tabStrip" />

</RelativeLayout>
