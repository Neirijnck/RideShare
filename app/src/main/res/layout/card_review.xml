<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_review"
        android:layout_gravity="center"
        android:layout_height="105dp"
        card_view:cardCornerRadius="4dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android.support.v7.cardview:cardElevation="10dp"
        >

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/imgBeoordelingFoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/account"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="4dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naam Voornaam"
        android:id="@+id/txbBeoordelingNaam"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgBeoordelingFoto"
        android:layout_toEndOf="@+id/imgBeoordelingFoto"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="100dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beoordeling"
        android:id="@+id/txbBeoordeling"
        android:layout_below="@+id/txbBeoordelingNaam"
        android:layout_alignLeft="@+id/txbBeoordelingNaam"
        android:layout_alignStart="@+id/txbBeoordelingNaam"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="100dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar5"
        android:src="@drawable/ic_star_outline_grey600_38dp"
        android:layout_marginLeft="350dp"
        android:layout_marginTop="2dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar4"
        android:src="@drawable/ic_star_half_grey600_38dp"
        android:layout_marginLeft="325dp"
        android:layout_marginTop="2dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar3"
        android:src="@drawable/ic_star_grey600_38dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="2dp" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar2"
        android:src="@drawable/ic_star_grey600_38dp"
        android:layout_marginLeft="275dp"
        android:layout_marginTop="2dp"  />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar1"
        android:src="@drawable/ic_star_grey600_38dp"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="2dp"  />


    </android.support.v7.widget.CardView>

</RelativeLayout>