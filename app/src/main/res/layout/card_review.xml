<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_review"
        android:layout_height="105dp"
        card_view:cardCornerRadius="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android.support.v7.cardview:cardElevation="1dp"
    card_view:cardBackgroundColor="@color/rideshare_card"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/imgBeoordelingFoto"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:src="@drawable/account"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="5dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Naam Voornaam"
            android:id="@+id/txbBeoordelingNaam"
            android:layout_toEndOf="@+id/imgBeoordelingFoto"
            android:textStyle="bold"
            android:textSize="15sp"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@+id/imgBeoordelingFoto"
            android:layout_toRightOf="@+id/imgBeoordelingFoto" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Beoordeling"
            android:id="@+id/txbBeoordeling"
            android:layout_below="@+id/imgBeoordelingFoto"
            android:layout_margin="8dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:id="@+id/txbBeoordelingDate"
            android:layout_below="@+id/txbBeoordelingNaam"
            android:layout_alignLeft="@+id/txbBeoordelingNaam"
            android:layout_alignStart="@+id/txbBeoordelingNaam"
            android:textSize="10sp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgStar5"
            android:src="@drawable/ic_star_outline_grey600_38dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="2dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgStar4"
            android:src="@drawable/ic_star_half_grey600_38dp"
            android:layout_alignTop="@+id/imgStar5"
            android:layout_toLeftOf="@+id/imgStar5"
            android:layout_toStartOf="@+id/imgStar5" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgStar3"
            android:src="@drawable/ic_star_grey600_38dp"
            android:layout_alignTop="@+id/imgStar4"
            android:layout_toLeftOf="@+id/imgStar4"
            android:layout_toStartOf="@+id/imgStar4"  />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgStar2"
            android:src="@drawable/ic_star_grey600_38dp"
            android:layout_alignTop="@+id/imgStar3"
            android:layout_toLeftOf="@+id/imgStar3"
            android:layout_toStartOf="@+id/imgStar3"  />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/imgStar1"
            android:src="@drawable/ic_star_grey600_38dp"
            android:layout_alignTop="@+id/imgStar2"
            android:layout_toLeftOf="@+id/imgStar2"
            android:layout_toStartOf="@+id/imgStar2" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>