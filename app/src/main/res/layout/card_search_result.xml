<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_trip"
    android:layout_height="85dp"
    card_view:cardCornerRadius="5dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="match_parent"
    android.support.v7.cardview:cardElevation="1dp"
    card_view:cardBackgroundColor="@color/rideshare_card"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <com.facebook.widget.ProfilePictureView
            android:layout_width="95dp"
            android:layout_height="95dp"
            android:id="@+id/imgSearchResult"
            android:src="@drawable/ic_person_grey600_36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true">
            </com.facebook.widget.ProfilePictureView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/txtSearchResultName"
            android:layout_marginTop="10dp"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgSearchResult"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textColor="@color/rideshare_text"
            android:layout_marginLeft="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="From To"
            android:id="@+id/txtSearchResultFromTo"
            android:layout_below="@+id/txtSearchResultName"
            android:layout_toRightOf="@+id/imgSearchResult"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Date"
            android:id="@+id/txtSearchResultDate"
            android:layout_below="@+id/txtSearchResultFromTo"
            android:layout_toRightOf="@+id/imgSearchResult"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginLeft="10dp" />


    </RelativeLayout>

    </android.support.v7.widget.CardView>