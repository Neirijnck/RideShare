<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_trip"
    android:layout_height="75dp"
    card_view:cardCornerRadius="5dp"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:layout_width="match_parent"
    android.support.v7.cardview:cardElevation="1dp"
    card_view:cardBackgroundColor="@color/rideshare_card"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >


        <ImageView
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:id="@+id/imgSearchResult"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="12dp"
            android:src="@drawable/ic_person_grey600_36dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Name"
            android:id="@+id/txtSearchResultName"
            android:layout_alignTop="@+id/imgSearchResult"
            android:layout_toRightOf="@+id/imgSearchResult"
            android:layout_toEndOf="@+id/imgSearchResult"
            android:layout_margin="4dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="From To"
            android:id="@+id/txtSearchResultFromTo"
            android:layout_marginLeft="3dp"
            android:layout_below="@+id/txtSearchResultName"
            android:layout_alignLeft="@+id/txtSearchResultName"
            android:layout_alignStart="@+id/txtSearchResultName" />


    </RelativeLayout>

    </android.support.v7.widget.CardView>