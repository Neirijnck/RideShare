    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:android.support.v7.cardview="http://schemas.android.com/tools"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view_trip"
        android:layout_height="100dp"
        card_view:cardCornerRadius="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="match_parent"
        android:minWidth="300dp"
        android:layout_weight=".100"
        android:foreground="?android:attr/selectableItemBackground"
        android.support.v7.cardview:cardElevation="1dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardBackgroundColor="@color/rideshare_card">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:minWidth="275dp"
            android:layout_weight=".100">

        <com.facebook.widget.ProfilePictureView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/imgTripPicture"
            android:src="@drawable/account"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"></com.facebook.widget.ProfilePictureView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:maxLength="27"
            android:text="@string/Trip_MyRequests_title"
            android:id="@+id/txtTripTitle"
            android:layout_toEndOf="@+id/imgTripPicture"
            android:layout_alignTop="@+id/imgTripPicture"
            android:layout_toRightOf="@+id/imgTripPicture"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="4dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Datum"
            android:maxLength="27"
            android:id="@+id/txtTripInfoDate"
            android:layout_toEndOf="@+id/imgTripPicture"
            android:layout_below="@+id/txtTripTitle"
            android:layout_alignLeft="@+id/txtTripTitle"
            android:layout_alignStart="@+id/txtTripTitle"
            android:textSize="12sp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tripinfo"
                android:id="@+id/txtTripInfo"
                android:layout_below="@+id/txtTripPrice"
                android:layout_toRightOf="@+id/imgTripPicture"
                android:layout_toEndOf="@+id/imgTripPicture"
                android:layout_marginLeft="2dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text=""
                android:layout_below="@+id/txtTripInfoDate"
                android:layout_alignLeft="@+id/txtTripInfoDate"
                android:layout_alignStart="@+id/txtTripInfoDate"
                android:id="@+id/txtTripPrice"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>