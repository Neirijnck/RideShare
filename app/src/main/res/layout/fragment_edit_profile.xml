<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    tools:context="nmct.howest.be.rideshare.Activities.Fragments.EditProfileFragment">

    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nmct.howest.be.rideshare.Activities.Fragments.PlanningFragment"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:focusable="true"
        android:focusableInTouchMode="true"
        >

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imgEditProfilePic"
            android:src="@drawable/account"
            android:layout_alignParentTop="true"
            android:layout_margin="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile_Name"
            android:id="@+id/txbEditName"
            android:layout_below="@+id/imgEditProfilePic"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp"
            android:textSize="17sp"
            />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txtEditName"
            android:layout_below="@+id/txbEditName"
            android:layout_alignLeft="@+id/txbEditName"
            android:layout_alignStart="@+id/txbEditName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile_FirstName"
            android:id="@+id/textView"
            android:textSize="17sp"
            android:layout_below="@+id/txtEditName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="12dp" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText"
            android:layout_alignStart="@+id/txbEditName"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile_Place"
            android:id="@+id/textView2"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/editText"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText2"
            android:layout_alignStart="@+id/txbEditName"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView2"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile_Auto"
            android:id="@+id/textView3"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/editText2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText3"
            android:layout_alignStart="@+id/txbEditName"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView3"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile_Places"
            android:id="@+id/textView4"
            android:textSize="17sp"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/editText3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editText4"
            android:layout_alignStart="@+id/txbEditName"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textView4"
            android:inputType="numberDecimal"
            android:layout_alignParentLeft="true" />

    </RelativeLayout>
</ScrollView>
