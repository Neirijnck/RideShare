<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nmct.howest.be.rideshare.Activities.Fragments.MijnProfielFragment"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <ImageView
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:id="@+id/imgProfielFoto"
            android:src="@drawable/account"
            android:layout_alignParentTop="true"
            android:layout_alignRight="@+id/txbBeoordelingen"
            android:layout_alignEnd="@+id/txbBeoordelingen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Voornaam Naam"
            android:id="@+id/txtNaam"
            android:layout_toEndOf="@+id/imgProfielFoto"
            android:textStyle="bold"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imgProfielFoto"
            android:layout_marginLeft="16dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Plaats"
            android:id="@+id/txtPlaats"
            android:layout_below="@+id/txtNaam"
            android:layout_alignLeft="@+id/txtNaam"
            android:layout_alignStart="@+id/txtNaam"
            android:layout_marginTop="10dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Geslacht, Leeftijd"
            android:id="@+id/txtGeslachtLeeftijd"
            android:layout_below="@+id/txtPlaats"
            android:layout_alignLeft="@+id/txtPlaats"
            android:layout_alignStart="@+id/txtPlaats"
            android:layout_marginTop="10dp"
            android:textSize="17sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Auto (aantal plaatsen)"
            android:id="@+id/txtAuto"
            android:layout_below="@+id/txtGeslachtLeeftijd"
            android:layout_alignLeft="@+id/txtGeslachtLeeftijd"
            android:layout_alignStart="@+id/txtGeslachtLeeftijd"
            android:layout_marginTop="10dp"
            android:textSize="17sp" />

        <fragment
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:name="nmct.howest.be.rideshare.Activities.Fragments.BeoordelingenFragment"
            tools:layout="@layout/fragment_beoordelingen"
            android:layout_below="@+id/imgProfielFoto"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="25dp">
            </fragment>

    </RelativeLayout>
</ScrollView>