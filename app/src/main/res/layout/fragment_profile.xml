<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    tools:context="nmct.howest.be.rideshare.Fragments.MyProfileFragment">

    <com.facebook.widget.ProfilePictureView
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:id="@+id/imgProfilePicture"
        android:layout_alignParentTop="true">
    </com.facebook.widget.ProfilePictureView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Voornaam Naam"
        android:id="@+id/txtName"
        android:layout_toEndOf="@+id/imgProfilePicture"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-5dp"
        android:layout_toRightOf="@+id/imgProfilePicture"
        android:layout_marginLeft="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Username"
        android:id="@+id/txtUserName"
        android:layout_below="@+id/txtName"
        android:layout_alignLeft="@+id/txtName"
        android:layout_alignStart="@+id/txtName"
        android:layout_marginTop="0dp"
        android:textSize="12sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Plaats"
        android:id="@+id/txtPlace"
        android:layout_below="@+id/txtUserName"
        android:layout_alignLeft="@+id/txtUserName"
        android:layout_alignStart="@+id/txtUserName"
        android:layout_marginTop="4dp"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Geslacht, Leeftijd"
        android:id="@+id/txtGenderAge"
        android:layout_below="@+id/txtPlace"
        android:layout_alignLeft="@+id/txtPlace"
        android:layout_alignStart="@+id/txtPlace"
        android:layout_marginTop="2dp"
        android:textSize="17sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Auto (aantal plaatsen)"
        android:id="@+id/txtCar"
        android:layout_below="@+id/txtGenderAge"
        android:layout_alignLeft="@+id/txtGenderAge"
        android:layout_alignStart="@+id/txtGenderAge"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:textSize="17sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_below="@+id/imgProfilePicture"
        android:layout_marginTop="10dp" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Profile_Reviews"
            android:id="@+id/txbReviews"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/lstReviews"
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:divider="@null"
            android:dividerHeight="8dp"
            android:layout_marginTop="20dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:visibility="invisible">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txbNoReviews"
            android:text="@string/Profile_NoReviews"
            android:layout_below="@+id/txbReviews"
            android:paddingTop="10dp" />

    </RelativeLayout>

</RelativeLayout>
