<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">
    
    <RelativeLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="nmct.howest.be.rideshare.Activities.Fragments.TripsFragment"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle"
            android:text="@string/Trip_MyRequests"
            android:id="@+id/txbRitAanvragen"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lstRitAanvragen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txbRitAanvragen"
            android:layout_alignBottom="@+id/txbRitAanvragen" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle"
            android:text="@string/Trip_Requests"
            android:id="@+id/txbRitVerzoeken"
            android:layout_below="@+id/lstRitAanvragen"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="28dp" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lstRitVerzoeken"
            android:layout_below="@+id/txbRitVerzoeken"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/txbOpgeslagenRitten" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/listSeparatorTextViewStyle"
            android:text="@string/Trip_SavedTrips"
            android:id="@+id/txbOpgeslagenRitten"
            android:layout_below="@+id/txbRitVerzoeken"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="25dp"
            android:autoText="false" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/lstOpgeslagenRitten"
            android:layout_below="@+id/txbOpgeslagenRitten"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/txbOpgeslagenRitten" />
    </RelativeLayout>
    
    <com.melnykov.fab.FloatingActionButton
    android:id="@+id/add_button"
    android:layout_width="@dimen/round_button_diameter"
    android:layout_height="@dimen/round_button_diameter"
    android:layout_gravity="bottom|right"
    android:layout_margin="@dimen/add_button_margin"
    android:src="@drawable/ic_action_add"
    fab:fab_colorNormal="@color/rideshare_primary"
    fab:fab_colorPressed="@color/rideshare_primary_dark"
    fab:fab_colorRipple="@color/rideshare_secondary"
        />

</FrameLayout>