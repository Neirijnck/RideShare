<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/imgBeoordelingFoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/account"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Naam Voornaam"
        android:id="@+id/txbBeoordelingNaam"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/imgBeoordelingFoto"
        android:layout_toEndOf="@+id/imgBeoordelingFoto"
        android:textStyle="bold"
        android:textSize="17sp"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="8dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beoordeling"
        android:id="@+id/txbBeoordeling"
        android:layout_below="@+id/txbBeoordelingNaam"
        android:layout_alignLeft="@+id/txbBeoordelingNaam"
        android:layout_alignStart="@+id/txbBeoordelingNaam"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar5"
        android:src="@drawable/ic_action_important"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="3dp"
        />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar4"
        android:layout_toStartOf="@+id/imgStar5"
        android:layout_alignTop="@+id/imgStar5"
        android:layout_toLeftOf="@+id/imgStar5"
        android:src="@drawable/ic_action_important" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar3"
        android:layout_toStartOf="@+id/imgStar4"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgStar4"
        android:src="@drawable/ic_action_important" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar2"
        android:layout_toStartOf="@+id/imgStar3"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgStar3"
        android:src="@drawable/ic_action_important" />

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/imgStar1"
        android:layout_toStartOf="@+id/imgStar2"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/imgStar2"
        android:src="@drawable/ic_action_important" />

</RelativeLayout>